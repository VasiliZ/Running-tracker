<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RunningTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_app_color</item>
        <item name="colorPrimaryVariant">@color/main_app_color</item>
        <item name="colorOnPrimary">@color/on_primary_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SwitchTheme" parent="Theme.RunningTracker">
        <item name="colorControlActivated">@color/main_app_color</item>
    </style>
</resources>